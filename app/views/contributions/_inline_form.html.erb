<%= simple_form_for @contribution, remote: true do |f| %>
  <div class="row">
    <%= f.input :status, as: :hidden %>
    <%= f.input :batch_id, as: :hidden %>
    <div class="col-md-3">
      <%= render partial: 'shared/contributor_select', locals: { f: f } %>
    </div>
    <div class="col-md-2">
      <%= f.input :date, as: :string, label: 'Date',
        input_html: { placeholder: "mm/dd/yyyy",
                      value: @contribution.date_string,
                      class: 'datepicker',
                      id: 'contribution-date' } %>
    </div>
    <div class="col-md-2">
      <%= f.input :amount %>
    </div>
    <div class="col-md-2">
      <%= f.input :payment_type, label: 'Payment Type',
        collection: [ 'Check', 'Cash', 'Other' ], selected: 'Check' %>
    </div>
    <div class="col-md-2">
      <%= f.input :reference %>
    </div>
    <div class="col-md-1">
      <div class="form-group">
        <label class="control-label">&nbsp;</label>
        <%= f.button :submit, 'Add', :class => 'btn-default form-control' %>
      </div>
    </div>
  </div>
<% end %>
