<% if @contributions.length > 0 %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Edit</th>
        <th>Contributor</th>
        <th>Date</th>
        <th>Type</th>
        <th>Reference</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <%= render @contributions %>
    </tbody>
  </table>
  <%= will_paginate @contributions %>
<% end %>
