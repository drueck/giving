- if @contributions.length > 0
  %table.table.table-striped.table-bordered
    %thead
      %tr
        %th Edit
        %th Contributor
        %th Date
        %th Type
        %th Reference
        %th Amount
    %tbody
      - @contributions.each do |contribution|
        %tr
          %td= link_to 'Edit', edit_batch_contribution_path(contribution.batch, contribution)
          %td= link_to contribution.contributor.name, edit_contributor_path(contribution.contributor)
          %td= contribution.date_string
          %td= contribution.payment_type
          %td= contribution.reference
          %td= number_to_currency(contribution.amount)
  = will_paginate @contributions
