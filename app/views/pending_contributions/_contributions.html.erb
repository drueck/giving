<% if @contributions.length > 0 %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Edit</th>
        <th>Contributor</th>
        <th>Date</th>
        <th>Type</th>
        <th>Reference</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% @contributions.each do |contribution| %>
        <tr>
          <td><%= link_to 'Edit', edit_pending_contribution_path(contribution) %></td>
          <td><%= link_to contribution.contributor.name, edit_active_contributor_path(contribution.contributor) %></td>
          <td><%= contribution.date_string %></td>
          <td><%= contribution.payment_type %></td>
          <td><%= contribution.reference %></td>
          <td><%= number_to_currency(contribution.amount) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @contributions %>
<% end %>
